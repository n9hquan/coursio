<div class="container mt-5" style="max-width: 600px;">
  <h2 class="mb-4 text-center">Create a New Course</h2>
  <form method="POST" action="/courses/store">
    <div class="mb-3">
      <label for="name" class="form-label fw-semibold">Course Name</label>
      <input type="text" class="form-control shadow-sm rounded-3" id="name" name="name" placeholder="e.g., Introduction to Node.js" required>
    </div>
    <div class="mb-3">
      <label for="description" class="form-label fw-semibold">Description</label>
      <textarea class="form-control shadow-sm rounded-3" id="description" name="description" rows="3" placeholder="Briefly describe the course..." required></textarea>
    </div>
    <div class="mb-3">
      <label for="videoId" class="form-label fw-semibold">Video ID</label>
      <input type="text" class="form-control shadow-sm rounded-3" id="videoId" name="videoId" placeholder="YouTube Video ID" required>
    </div>
    <div class="mb-3">
      <label for="level" class="form-label fw-semibold">Level</label>
      <select class="form-select shadow-sm rounded-3" id="level" name="level" required>
        <option value="">Select course level</option>
        <option value="Beginner">Beginner</option>
        <option value="Intermediate">Intermediate</option>
        <option value="Advanced">Advanced</option>
      </select>
    </div>
    <button type="submit" class="btn btn-success w-100 py-2 fw-semibold shadow-sm rounded-3">Add Course</button>
  </form>
</div>
